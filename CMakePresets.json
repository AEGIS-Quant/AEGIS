{
  "version": 5,
  "cmakeMinimumRequired": { "major": 3, "minor": 24 },
  "configurePresets": [
    {      
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_POSITION_INDEPENDENT_CODE": "ON",
        "BUILD_SHARED_LIBS": "OFF",
        "AEGIS_BUILD_PYTHON": "ON",
        "AEGIS_ENABLE_CUDA": "ON"
      }
    },
    {
      "name": "default-debug",
      "displayName": "Default Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "AEGIS_ENABLE_CUDA": "ON"
      }
    },
    {
      "name": "default-release",
      "displayName": "Default Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "AEGIS_ENABLE_CUDA": "ON"
      }
    },
    {
      "name": "ci-debug",
      "displayName": "CI Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "AEGIS_ENABLE_CUDA": "OFF"
      }
    },
     {
      "name": "ci-release",
      "displayName": "CI Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "AEGIS_ENABLE_CUDA": "OFF"
      }
    }
  ],
  "buildPresets": [
    { "name": "build-debug",   "configurePreset": "default-debug" },
    { "name": "build-release", "configurePreset": "default-release" },
    { "name": "build-ci-debug",    "configurePreset": "ci-debug" },
    { "name": "build-ci-release",  "configurePreset": "ci-release" }
  ],

  "testPresets": [
    {
      "name": "test-debug",
      "configurePreset": "default-debug",
      "output": { "outputOnFailure": true}
    },
    {
      "name": "test-release",
      "configurePreset": "default-release",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "test-ci-debug",
      "configurePreset": "ci-debug",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "test-ci-release",
      "configurePreset": "ci-release",
      "output": { "outputOnFailure": true }
    }
  ]
}
